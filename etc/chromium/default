# Default settings for ungoogled-chromium. This file is sourced by /bin/bash
# from the chromium launcher.

# Uncomment this to spoof timezone to UTC
#export TZ='Etc/UTC'

# Options to pass to ungoogled-chromium.
# See https://github.com/ungoogled-software/ungoogled-chromium#feature-overview for additional
# command-line switches.

CHROMIUM_FLAGS="--enable-features=UseOzonePlatform --ozone-platform=wayland"
CHROMIUM_FLAGS="--enable-features=VaapiVideoDecoder --disable-features=UseChromeOSDirectVideoDecoder ${CHROMIUM_FLAGS}"
CHROMIUM_FLAGS="--disable-sharing-hub --hide-sidepanel-button ${CHROMIUM_FLAGS}"
CHROMIUM_FLAGS="--remove-tabsearch-button --scroll-tabs=never --tab-hover-cards=none ${CHROMIUM_FLAGS}"
CHROMIUM_FLAGS="--show-avatar-button=never ${CHROMIUM_FLAGS}"
